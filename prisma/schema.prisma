generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Meal {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  name        String?
  userId      String
  imageUrl    String
  imagePath   String?
  dishName    String
  ingredients String[]
  calories    Float
  protein     Float
  carbs       Float
  fats        Float
  fiber       Float?
  sugar       Float?
  sodium      Float?
  healthScore Int
  analysis    String?
  User        User     @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([healthScore])
}

model User {
  id         String      @id
  createdAt  DateTime    @default(now())
  updatedAt  DateTime
  name       String      @unique
  device     String?
  age        Int?
  height     Int?
  weight     Int?
  gender     String?
  bmr        String      @default("")
  Meal       Meal[]
  exercises  Exercise[]
}

model Exercise {
  id      String @id
  step    Int @default(0)
  sitting Int @default(0)
  burned  Int @default(0)
  date    DateTime

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}
