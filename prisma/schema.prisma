generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int     @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  name      String?
  device    String?
  age       Int?
  height    Int?
  weight    Int?
  gender    String?
  meals     Meal[]
}

model Meal {
  id          Int    @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  imageUrl    String
  imagePath   String?
  dishName    String
  ingredients String[]
  calories    Float
  protein     Float
  carbs       Float
  fats        Float
  fiber       Float?
  sugar       Float?
  sodium      Float?
  healthScore Int      // 0-100
  analysis    String?  // Full AI analysis text

  @@index([createdAt])
  @@index([healthScore])
}